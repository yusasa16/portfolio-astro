---
import { css } from '../../../styled-system/css';

const today = new Date();
const todayYear = today.getFullYear();
---

<footer
	class={css({
		textAlign: 'center',
		backgroundColor: '#24292E',
		color: '#fff',
		paddingBlock: '5px',
	})}
>
	<small
		class={css({
			fontSize: '1.2rem',
		})}
	>
		&copy; {todayYear} Yusaku SATO
	</small>
</footer>
