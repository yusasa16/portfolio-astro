---
import { css } from '@styled-system/css';
import { container } from '@components/styles/container';

const menuList = [
	{
		text: 'About',
		href: '/about/',
	},
	{
		text: 'Blog',
		href: '/blog/',
	},
	{
		text: 'Coding Patterns',
		href: '/coding-patterns/',
	},
	{
		text: 'Contact',
		href: '/contact/',
	},
];

const { isHome = false } = Astro.props;
---

<header class={css({ paddingBlock: '16px', md: { paddingBlock: '120px' } })}>
	<div class={container}>
		<div
			class={css({
				display: 'flex',
				flexDirection: 'column',
				alignItems: 'center',
				md: {
					flexDirection: 'row',
					justifyContent: 'space-between',
				},
			})}
		>
			{
				isHome ? (
					<h1 class={css({ fontSize: '2.7rem' })}>Yusaku SATO</h1>
				) : (
					<div class={css({ fontSize: '2.7rem' })}>
						<a href="/">Yusaku SATO</a>
					</div>
				)
			}
			<ul class={css({ display: 'flex', gap: '10px 32px', flexWrap: 'wrap' })}>
				{
					menuList.map(menu => {
						return (
							<li class={css({ fontSize: '1.4rem' })}>
								<a
									class={css({
										transition: 'opacity 300ms',
										_hover: { md: { opacity: '0.6' } },
									})}
									href={menu.href}
								>
									{menu.text}
								</a>
							</li>
						);
					})
				}
			</ul>
		</div>
	</div>
</header>
