---
import { css } from '@styled-system/css';

const { text, href, isBlank } = Astro.props;
---

<div
	class={css({
		textAlign: 'center',
	})}
>
	<a
		href={href}
		target={isBlank ? '_blank' : null}
		class={css({
			textDecoration: 'underline',
			textUnderlineOffset: '4px',
			'@media (hover: hover)': {
				_hover: {
					textDecoration: 'none',
				},
			},
		})}>{text}</a
	>
</div>
