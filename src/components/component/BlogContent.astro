---
const { content } = Astro.props;
---

<div class="blog-content" set:html={content} />

<style lang="scss" is:global>
	.blog-content {
		h2,
		h3,
		h4,
		h5,
		h6 {
			@apply font-bold mt-14 mb-10;
		}
		h2 {
			@apply text-3xl;
		}

		h3 {
			@apply text-2xl;
		}

		h4 {
			@apply text-xl;
		}

		h5 {
			@apply text-lg;
		}

		h6 {
			@apply text-base;
		}

		p {
			@apply my-4;
		}

		ul {
			@apply list-disc ps-4;
		}

		ol {
			@apply list-decimal ps-8;
		}
	}
</style>
